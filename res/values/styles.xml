<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="EditorTextView" parent="@android:style/Widget.TextView">
		<item name="android:padding">5px</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="EditorBaseButton" parent="@android:style/Widget.Button">
		<item name="android:layout_weight">0</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="EditorBaseButton.ListButton">
		<item name="android:drawableLeft">@drawable/more36</item>
	</style>
	<style name="EditorEditText" parent="@android:style/Widget.EditText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:padding">5px</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	<style name="EditorBaseButton.DateButton">
		<item name="android:layout_width">fill_parent</item>
	</style>
	<style name="EditorEditText.Sum">
		<item name="android:gravity">right|center_vertical</item>
		<item name="android:digits">@string/allowed_sum_digits</item>
		<item name="android:inputType">number|numberSigned|numberDecimal</item>
	</style>
	<style name="EditorHorizontalLinearLayout">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">left|center_vertical</item>
	</style>
	<style name="EditorHorizontalLinearLayout.FormButton">
		<item name="android:paddingTop">5px</item>
		<item name="android:gravity">center_horizontal</item>
	</style>
	<style name="DescEditText" parent="@android:style/Widget.EditText">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">top|left</item>
		<item name="android:lines">3</item>
		<item name="android:padding">5px</item>
	</style>
	<style name="FormButton" parent="@android:style/Widget.Button">
		<item name="android:layout_weight">1</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="OpLine">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
	</style>
	<style name="MyListView" parent="@android:style/Widget.ListView">
		<item name="android:background">@android:color/transparent</item>
	</style>

</resources>
