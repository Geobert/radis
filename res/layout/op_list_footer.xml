<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent" android:background="@drawable/op_line"
	android:layout_height="wrap_content" android:gravity="center" >

	<ImageView android:id="@+id/loading_icon" android:src="@drawable/refresh32"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:paddingRight="10px" android:visibility="invisible"/>

	<TextView android:id="@+id/get_more_op" android:text="@string/get_more_op" 
		android:textSize="22sp" android:layout_height="wrap_content" android:textColor="@color/text_color"
		android:layout_width="wrap_content" android:gravity="center"
		android:layout_weight="0" />
</LinearLayout>