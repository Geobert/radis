<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="horizontal"
	android:layout_height="wrap_content"
	android:background="#D6D6FF">
	<TextView android:layout_width="fill_parent" android:id="@+id/op_date"
		android:textColor="#000000" android:layout_height="wrap_content"
		android:padding="3dip" android:layout_column="0" android:text="24/12/10" />
	<TextView android:layout_width="fill_parent" android:id="@+id/op_third_party"
		android:layout_height="wrap_content" android:padding="3dip"
		android:textColor="#000000" android:layout_column="1" android:text="toto" />
	<TextView android:layout_width="wrap_content" android:id="@+id/op_debit"
		android:gravity="right" android:padding="3dip" android:textColor="#000000"
		android:layout_height="wrap_content" android:text="200 €"
		android:layout_column="2" />
	<TextView android:layout_width="wrap_content" android:id="@+id/op_credit"
		android:textColor="#000000" android:gravity="right" android:padding="3dip"
		android:layout_column="3" android:layout_height="wrap_content"
		android:text="200 €" />
</LinearLayout>