<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="horizontal"
	android:layout_height="wrap_content">
	<TextView android:layout_width="fill_parent" android:id="@+id/account_name"
		android:layout_weight="1" android:layout_height="wrap_content"
		android:text="toto" android:textSize="25px"/>
	<TextView android:layout_width="wrap_content" android:id="@+id/account_sum"
		android:layout_weight="1" android:minEms="10" android:gravity="right"
		android:layout_height="wrap_content" android:text="200" android:textSize="25px" />
	<TextView android:layout_width="wrap_content" android:id="@+id/account_currency"
		android:layout_weight="1" android:minEms="8" android:gravity="left"
		android:layout_height="wrap_content" android:text="$US" android:textSize="25px" />	
</LinearLayout>
