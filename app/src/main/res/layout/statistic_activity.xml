<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="?attr/colorPrimary"
        android:minHeight="44dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/normal_bg">

        <ImageView
            android:id="@+id/account_ico"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"

            android:src="@drawable/account_48" />

        <TextView
            android:id="@+id/chart_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/account_ico"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@id/account_ico"
            android:text="Courant"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/filter_ico"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/chart_account_name"
            android:src="@drawable/filter_48" />

        <TextView
            android:id="@+id/filter_lbl"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignBottom="@id/filter_ico"
            android:layout_alignTop="@id/filter_ico"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/filter_ico"
            android:gravity="center_vertical"
            android:text="CatÃ©gorie"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/time_ico"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/account_ico"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/clock_48" />

        <TextView
            android:id="@+id/time_scale_lbl"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignBottom="@id/time_ico"
            android:layout_alignTop="@id/time_ico"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/time_ico"
            android:gravity="center_vertical"
            android:text="12/12/2000 - 12/12/2001"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:id="@+id/chart_cont"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/time_ico"
            android:layout_margin="8dp"
            android:gravity="center"
            android:orientation="horizontal" />
    </RelativeLayout>
</LinearLayout>
