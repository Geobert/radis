<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_margin="5dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/targeted_sum_title"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:text="@string/targeted_sum"/>

    <EditText
            android:id="@+id/targeted_sum"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            style="@style/EditorEditText.Sum"
            android:gravity="center_vertical|right"
            />

    <TextView
            android:id="@+id/checking_op_status_title"
            android:text="@string/checked_ops_sums_title"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:gravity="right"
            android:layout_width="0dp"/>

    <TextView
            android:id="@+id/checking_op_status"
            android:background="@color/holo_blue_dark"
            android:gravity="right"
            android:layout_height="fill_parent"
            android:text="totottot\ntatat"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"/>
</LinearLayout>