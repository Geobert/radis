<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.geobert.radis"
    android:versionCode="30"
    android:versionName="0.7b2" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" >
    </uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="7" android:targetSdkVersion="10"/>

    <application
        android:name="Radis"
        android:icon="@drawable/radis"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black" >
        <activity
            android:name="AccountList"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".editor.AccountEditor"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateVisible|adjustResize" >
        </activity>
        <activity
            android:name="OperationList"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".editor.OperationEditor"
            android:label="@string/op_edition"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name="ScheduledOpList"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name=".editor.ScheduledOperationEditor"
            android:launchMode="singleTop" >
        </activity>

        <provider
            android:name=".db.DbContentProvider"
            android:authorities="fr.geobert.radis.db"
            android:exported="false" >
        </provider>

        <receiver android:name=".service.InstallRadisServiceReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="fr.geobert.radis.STARTED" />
            </intent-filter>
        </receiver>

        <service android:name=".service.RadisService" >
        </service>

        <receiver android:name=".service.OnAlarmReceiver" >
        </receiver>

        <activity
            android:name="RadisConfiguration"
            android:launchMode="singleTop" >
        </activity>
    </application>

</manifest>